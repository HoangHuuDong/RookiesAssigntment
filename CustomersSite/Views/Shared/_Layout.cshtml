<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] CustomersSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CustomersSite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/vendor/font-awesome/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product-detail.css" asp-append-version="true" />

</head>
<body>
    <div class="app">
        <header class="header">
            <div class="grid">
                <nav class="header__navbar">
                    <ul class="header__navbar-list">
                        <li class="header__navbar-item header__navbar-item--separate">
                            <a style="text-decoration: none;color: var(--white-color);" asp-controller="Home" asp-action="Index">Rookies Store</a>
                        </li>
                        <li class="header__navbar-item header__navbar-item--has-qr">
                            Download App
                            <div class="header__qr">
                                <img src="/img/qr_code.png" alt="QR code" class="header__qr-img">
                                <div class="header__qr-apps">
                                    <a href="" class="header__qr-link-left">
                                        <img src="/img/app_store.png" alt="App Store" class="header__qr-download-img">
                                    </a>
                                    <a href="" class="header__qr-link-right">
                                        <img src="/img/gg_play.png" alt="Goggle Play" class="header__qr-download-img">
                                    </a>
                                </div>
                            </div>
                        </li>
                    </ul>
                    <ul class="header__navbar-list">
                        <li class="header__navbar-item header__navbar-item--strong header__navbar-item--separate">Register</li>
                        <li class="header__navbar-item header__navbar-item--strong">Login</li>
@*                        <li class="header__navbar-item header__navbar-user">
                            <img src="https://scontent.fsgn2-4.fna.fbcdn.net/v/t39.30808-6/267904423_3072838436303106_8402354931433032745_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=09cbfe&_nc_ohc=gQKdSzTZAMMAX8nkJe5&_nc_ht=scontent.fsgn2-4.fna&oh=00_AfBmer_J-Hw3HiInL9srHVcp_FI3MimR1oZSjPihq9blog&oe=636707C7" alt="" class="header__navbar-user-img">
                            <span class="header__navbar-user-name">Huu Dong</span>

                            <ul class="header__navbar-user-menu">
                                <li class="header__navbar-user-item">
                                    <a href="">My account</a>
                                </li>
                                <li class="header__navbar-user-item">
                                    <a href="">History</a>
                                </li>
                                <li class="header__navbar-user-item">
                                    <a href="">Log Out</a>
                                </li>
                            </ul>
                        </li>*@
                    </ul>
                </nav>

                <div class="header-with-search">
                    <div class="header__logo">
                        <a asp-controller="Home" asp-action="Index"><img src="/img/shopee.png" alt="logo" class="header__logo-img"></a>
                    </div>

                    <div class="header__search">
                        <form style="display:contents" asp-controller="Home" asp-action="Search" method="get">
                            <div class="header__search-input-wrap">
                                <input id="product" name="product" type="text" class="header__search-input" placeholder="Search product">
                            </div>
                            <button type="submit" class="header__search-btn">
                                <i class="header__search-btn-icon fas fa-search"></i>
                            </button>
                        </form>
                    </div>

                    <div class="header__cart">
                        <div class="header__cart-wrap">
                            <i class="header__cart-icon fa-solid fa-cart-shopping"></i>
                            <span id="header__cart-notice" class="header__cart-notice">3</span>
                            <!-- No Cart: header__cart-list--no-cart -->
                            <div class="header__cart-list">
                                <img src="./assets/img/qr_code.png" alt="" class="header__cart-no-cart-img">
                                <span class="header__cart-list-no-cart-msg">
                                    Nothing Now
                                </span>
                                <h4 class="header__cart-heading">Already adding</h4>
                                <ul id="header__cart-list-item" class="header__cart-list-item">
                                    <li class="header__cart-item">
                                        <img src="https://image.uniqlo.com/UQ/ST3/AsianCommon/imagesgoods/431599/item/goods_69_431599.jpg?width=1600&impolicy=quality_75" alt="" class="header__cart-img">
                                        <div class="header__cart-item-info">
                                            <div class="header__cart_item-head">
                                                <h5 class="header__cart-item-name">Áo Thun Cổ Tròn Ngắn Tay</h5>
                                                <div class="header__cart-item-price-wrap">
                                                    <span class="header__cart-item-price">244.000đ</span>
                                                    <span class="header__cart-item-multiply">x</span>
                                                    <span class="header__cart-item-qnt">1</span>
                                                </div>
                                            </div>
                                            <div class="header__cart-item-body">
                                                <span class="header__cart-item-description">
                                                    Color : Red
                                                </span>
                                                <span class="header__cart-item-remove">Delete</span>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="header__cart-item">
                                        <img src="https://image.uniqlo.com/UQ/ST3/AsianCommon/imagesgoods/453738/sub/goods_453738_sub14.jpg?width=1600&impolicy=quality_75" alt="" class="header__cart-img">
                                        <div class="header__cart-item-info">
                                            <div class="header__cart_item-head">
                                                <h5 class="header__cart-item-name">Áo Chui Đầu Gài Nút Dài Tay</h5>
                                                <div class="header__cart-item-price-wrap">
                                                    <span class="header__cart-item-price">686.000đ</span>
                                                    <span class="header__cart-item-multiply">x</span>
                                                    <span class="header__cart-item-qnt">1</span>
                                                </div>
                                            </div>
                                            <div class="header__cart-item-body">
                                                <span class="header__cart-item-description">
                                                    Color : Red
                                                </span>
                                                <span class="header__cart-item-remove">Delete</span>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="header__cart-item">
                                        <img src="https://image.uniqlo.com/UQ/ST3/AsianCommon/imagesgoods/452524/sub/goods_452524_sub14.jpg?width=1600&impolicy=quality_75" alt="" class="header__cart-img">
                                        <div class="header__cart-item-info">
                                            <div class="header__cart_item-head">
                                                <h5 class="header__cart-item-name">Quần Jeans Slim Fit</h5>
                                                <div class="header__cart-item-price-wrap">
                                                    <span class="header__cart-item-price">980.000đ</span>
                                                    <span class="header__cart-item-multiply">x</span>
                                                    <span class="header__cart-item-qnt">1</span>
                                                </div>
                                            </div>
                                            <div class="header__cart-item-body">
                                                <span class="header__cart-item-description">
                                                    Color : Red
                                                </span>
                                                <span class="header__cart-item-remove">Delete</span>
                                            </div>
                                        </div>
                                    </li>
                                </ul>

                                <a href="#" class="header__cart-view-cart btn btn--primary">View cart</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </header>
    </div>

    @*RenderBody*@
    @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2/11/2022 - Đông - CustomersSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/popperjs/popper.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
